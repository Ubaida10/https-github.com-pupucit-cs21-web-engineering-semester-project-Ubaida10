@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="row w-100">
            <div class="col-md-6 mx-auto">
                <div class="card shadow-sm" style="background-color: #F5F5DC;">
                    <div class="card-body p-4">
                        <h2 class="card-title mb-4 text-center" style="color: #800020">Login</h2>
                        <section>
                            <form id="account" method="post">
                                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                                <div class="mb-3">
                                    <label asp-for="Input.Email" class="form-label" style="color: black">Email address</label>
                                    <input asp-for="Input.Email" type="email" class="form-control" autocomplete="username" aria-required="true" style="background-color: transparent; border:none; border-bottom: 2px solid #800020; color:black;" placeholder="Enter your email" />
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>

                                <div class="mb-3">
                                    <label asp-for="Input.Password" class="form-label" style="color: black">Password</label>
                                    <input asp-for="Input.Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" style="background-color: transparent; border:none; border-bottom: 2px solid #800020; color:black;" placeholder="Enter your password" />
                                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                                </div>

                                <div class="form-check mb-3">
                                    <input asp-for="Input.RememberMe" type="checkbox" class="form-check-input" id="rememberMe" />
                                    <label asp-for="Input.RememberMe" class="form-check-label" for="rememberMe">Remember Me</label>
                                </div>

                                <div class="mb-3">
                                    <button id="login-submit" type="submit" class="btn btn-primary w-100" style="background-color: #800020; border-radius: 30px;">Login</button>
                                </div>

                                <div class="text-center mt-3">
                                    <p>
                                        <a id="forgot-password" asp-page="./ForgotPassword" style="color: #007bff; text-decoration: none;">Forgot your password?</a>
                                    </p>
                                    <!--
                                        <p>
                                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="color: #007bff; text-decoration: none;">Register as a new user</a>
                                    </p>
                                    <p>
                                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" style="color: #007bff; text-decoration: none;">Resend email confirmation</a>
                                    </p>
                                    -->
                                    
                                </div>

                                <div class="text-center mb-3">
                                    <p class="mb-0">Or log in with:</p>
                                </div>
                                <div class="d-flex justify-content-center">
                                    <a href="https://www.google.com" target="_blank" class="mx-2">
                                        <button type="button" class="btn btn-outline-dark" style="border-radius: 30px">
                                            <i class="fab fa-google"></i> Google
                                        </button>
                                    </a>

                                    <a href="https://www.facebook.com" target="_blank" class="mx-2">
                                        <button type="button" class="btn btn-outline-primary" style="border-radius: 30px">
                                            <i class="fab fa-facebook-f"></i> Facebook
                                        </button>
                                    </a>

                                    <a href="https://www.twitter.com" target="_blank" class="mx-2">
                                        <button type="button" class="btn btn-outline-info" style="border-radius: 30px">
                                            <i class="fab fa-twitter"></i> Twitter
                                        </button>
                                    </a>

                                    <a href="https://www.instagram.com" target="_blank" class="mx-2">
                                        <button type="button" class="btn btn-outline-success" style="border-radius: 30px">
                                            <i class="fab fa-instagram"></i> Insta
                                        </button>
                                    </a>
                                </div>
                            </form>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

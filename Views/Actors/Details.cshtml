@model CineTix.Models.Entity_Classes.Actor

@{
    ViewData["Title"] = "About " + Model.Name;
}

<!DOCTYPE html>
<html>
<head>
    <title>@Model.Name's Profile</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .full-height {
            height: 100vh; 
        }
        .centered-card {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }
    </style>
</head>
<body>
<div class="container full-height d-flex justify-content-center align-items-center">
    <div class="card mb-3" style="max-width: 540px;background-color: transparent;color: white; border:none">
        <div class="row g-0">
            <div class="col-md-4">
                <img src="@Model.ProfilePictureUrl" class="img-fluid rounded-start" alt="@Model.Name">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title">@Model.Name</h5>
                    <p class="card-text">@Model.Biography</p>
                    <p class="card-text"><strong>Date of Birth:</strong> @Model.DateOfBirth.ToString("dd MMM yyyy")</p>
                    <p class="card-text"><small class="text-body-tertiary">Profile Last Updated Recently</small></p>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
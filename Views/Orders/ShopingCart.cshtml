@model List<CineTix.Data.Cart>

@{
    ViewData["Title"] = "Shoping Cart";
}
<section class="d-flex justify-content-center align-items-center" style="height: 100vh; background-color: transparent;">
    <div class="container">
        <div class="row d-flex justify-content-center align-items-center">
            <div class="col-lg-8">
                <div class="card" style="background-color: #F5F5DC; color: #800020;">
                    <div class="card-body p-4">
                        <h5 class="mb-3">
                            <a asp-controller="Movies" asp-action="Index" class="text-body">
                                <i class="fas fa-long-arrow-alt-left me-2"></i>Continue shopping
                            </a>
                        </h5>
                        <hr>
                        <div class="d-flex justify-content-between align-items-center mb-4">
                            <div>
                                <p class="mb-1">Shopping cart</p>
                                <p class="mb-0">You have @Model.Sum(c => c.Items.Count) items in your cart</p>
                            </div>
                            <div>
                                <p class="mb-0">
                                    <span class="text-muted">Sort by:</span> 
                                    <a href="#" class="text-body">price 
                                        <i class="fas fa-angle-down mt-1"></i>
                                    </a>
                                </p>
                            </div>
                        </div>

                        <div class="card mb-3" style="border: 1px solid #800020;">
                            @foreach (var cart in Model)
                            {
                                @foreach (var item in cart.Items)
                                {
                                    <div class="card-body" style="background-color: #F5F5DC;">
                                        <div class="d-flex justify-content-between">
                                            <div class="d-flex flex-row align-items-center">
                                                <div>
                                                    <img src="@item.Movie.ImageUrl" 
                                                         class="img-fluid rounded-3" 
                                                         alt="Shopping item" style="width: 65px;">
                                                </div>
                                                <div class="ms-3">
                                                    <h5>@item.Movie.Title</h5>
                                                </div>
                                            </div>
                                            <div class="d-flex flex-row align-items-center">
                                                <div style="width: 50px;">
                                                    <h5 class="fw-normal mb-0">@item.Amount</h5>
                                                </div>
                                                <div style="width: 80px;">
                                                    <h5 class="mb-0">$@item.Movie.Price</h5>
                                                </div>
                                                <a href="@Url.Action("RemoveFromCart", new { id = item.Id })" 
                                                   style="color: #800020;">
                                                    <i class="fas fa-trash-alt"></i>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@model CineTix.Data.Login

@{
    ViewData["Title"] = "Log In to Your Account";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <div class="container d-flex justify-content-center align-items-center min-vh-100">
        <div class="row w-100">
            <div class="col-md-6 mx-auto">
                <div class="card shadow-sm" style="background-color: #F5F5DC;">
                    <div class="card-body p-4">
                        <h2 class="card-title mb-4 text-center" style="color: #800020">Login</h2>
                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label" style="color: black">Email address</label>
                                <input asp-for="Email" type="email" class="form-control" id="email" style="background-color: transparent;border:none; border-bottom: 2px solid #800020; color:black;" placeholder="Enter your email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label" style="color: black">Password</label>
                                <input asp-for="Password" type="password" class="form-control" id="password" style="background-color: transparent; border: none;border-bottom: 2px solid #800020; color: black" placeholder="Enter your password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="mb-3 form-check">
                                <input asp-for="RememberMe" type="checkbox" class="form-check-input" id="rememberMe" />
                                <label asp-for="RememberMe" class="form-check-label" for="rememberMe">Remember Me</label>
                            </div>
                            <div class="mb-3">
                                <button type="submit" class="btn btn-primary w-100" style="background-color: #800020; border-radius: 30px;">Login</button>
                            </div>
                            <div class="text-center mb-3">
                                <p class="mb-0">Or log in with:</p>
                            </div>
                            <div class="d-flex justify-content-center">
                                <a href="https://www.google.com" target="_blank" class="mx-2">
                                    <button type="button" class="btn btn-outline-dark" style="border-radius: 30px">
                                        <i class="fab fa-google"></i> Google
                                    </button>
                                </a>
                                
                                <a href="https://www.facebook.com" target="_blank" class="mx-2">
                                    <button type="button" class="btn btn-outline-primary" style="border-radius: 30px">
                                        <i class="fab fa-facebook-f"></i> Facebook
                                    </button>
                                </a>
                                
                                <a href="https://www.twitter.com" target="_blank" class="mx-2">
                                    <button type="button" class="btn btn-outline-info" style="border-radius: 30px">
                                        <i class="fab fa-twitter"></i> Twitter
                                    </button>
                                </a>
                                
                                <a href="https://www.instagram.com" target="_blank" class="mx-2">
                                    <button type="button" class="btn btn-outline-success" style="border-radius: 30px">
                                        <i class="fab fa-instagram"></i> Insta
                                    </button>
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/js/all.min.js"></script>
</body>
</html>
